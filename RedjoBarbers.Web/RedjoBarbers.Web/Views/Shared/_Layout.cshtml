<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Redjo Barbers</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RedjoBarbers.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo/logo.png" alt="Redjo Barbers" style="height:75px;" />
                    <span class="fw-semibold">Redjo Barbers</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Начална страница</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Review" asp-action="Index">Отзиви</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BarberServices" asp-action="Index">Услуги</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">За нас</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointment" asp-action="Index">Свободни часове</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contacts">Контакти</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-dark" asp-controller="Appointment" asp-action="Create">
                            Запазете час
                        </a>
                        <partial name="_UserMenuPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3 d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <div>
                &copy; 2026 - Redjo Barbers
            </div>

            <div class="d-flex gap-3">
                <a class="text-muted text-decoration-none" asp-controller="Home" asp-action="Privacy">Политика за поверителност</a>
                <a class="text-muted text-decoration-none" asp-controller="BarberServices" asp-action="Index">Услуги</a>
                <a class="btn btn-dark" asp-controller="Appointment" asp-action="Create">Запазете час</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
