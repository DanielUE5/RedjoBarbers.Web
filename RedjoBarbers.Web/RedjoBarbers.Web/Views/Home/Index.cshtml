@using RedjoBarbers.Web.Data.Models
@model HomeIndexViewModel

@{
    ViewData["Title"] = "Начална страница";
    string returnUrl = Url.Action("Index", "Home") ?? "/";
}

<section class="home-hero">
    <div class="container text-center">
        <h1 class="display-4">Redjo Barbers</h1>
        <p class="lead">
            Място, където класическото бръснарство среща модерния стил.
        </p>
    </div>
</section>

<section class="home-about">
    <div class="container">
        <h2>Защо да избереш нас</h2>
        <p>
            В Redjo Barbers вярваме, че добрата визия започва с внимание към детайла.
            Независимо дали търсиш класическо подстригване, модерна прическа или
            прецизно оформяне на брада, при нас ще получиш професионално отношение
            и индивидуален подход.
        </p>
        <p>
            Работим с качествени инструменти и продукти, защото за нас
            бръснарството не е просто услуга, а занаят.
        </p>
    </div>
</section>

<section class="home-services">
    <div class="container">
        <h2 class="text-center mb-4">Най-популярните ни услуги</h2>

        <div class="row g-4 justify-content-center">
            @if (Model.Services.Any())
            {
                @foreach (BarberService s in Model.Services.Take(3))
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="service-card">
                            <h4>@s.Name</h4>
                            <p>@s.Description</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">В момента няма налични услуги.</p>
            }
        </div>

        <div class="text-center mt-4">
            <a asp-controller="BarberServices"
               asp-action="Index"
               class="btn btn-primary btn-lg">
                Разгледай пълния ни каталог
            </a>
        </div>
    </div>
</section>

<section class="home-reviews">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="mb-0">Препоръчани от клиенти</h2>

            <div class="d-flex gap-2">
                <a asp-controller="Review"
                   asp-action="Index"
                   class="btn btn-outline-secondary btn-sm">
                    Виж всички
                </a>

                <a asp-area="Identity"
                   asp-page="/Account/Login"
                   asp-route-returnUrl="@returnUrl"
                   class="btn btn-primary btn-sm">
                    Напишете отзив
                </a>
            </div>
        </div>

        @if (Model.Reviews.Any())
        {
            <div class="row g-4">
                @foreach (Review r in Model.Reviews)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong>@r.CustomerName</strong>
                                    <small class="text-muted">@r.ReviewDate.ToString("d")</small>
                                </div>

                                <div class="mb-2 text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= r.Rating)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </div>

                                <p class="mb-0">@r.Comments</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mt-2">Все още няма препоръчани отзиви.</p>
        }
    </div>
</section>

<section class="home-cta">
    <div class="container text-center">
        <h2>Готови ли сте за новата Ви визия?</h2>
        <p>
            Обади се и запази своя час още днес.
        </p>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a asp-controller="Appointment"
               asp-action="Create"
               class="btn btn-primary btn-lg">
                Запазете час
            </a>
        }
        else
        {
            <a asp-area="Identity"
               asp-page="/Account/Login"
               asp-route-returnUrl="@returnUrl"
               class="btn btn-primary btn-lg">
                Запазете час
            </a>
        }
    </div>
</section>

