@using System.Globalization
@model IEnumerable<ReviewIndexItemViewModel>

@{
    ViewData["Title"] = "Отзиви";
}

<section class="py-4">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
            <h2 class="mb-0">Отзиви</h2>

            <a asp-controller="Review"
               asp-action="Create"
               class="btn btn-primary">
                Напишете отзив
            </a>
        </div>

        @if (!Model.Any())
        {
            <p class="text-muted">Все още няма публикувани отзиви.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Услуга</th>
                            <th>Клиент</th>
                            <th>Рейтинг</th>
                            <th>Дата</th>
                            <th>Коментар</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ReviewIndexItemViewModel r in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@r.ServiceName</td>

                                <td>@r.CustomerName</td>

                                <td>
                                    <span class="text-warning me-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= r.Rating)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                        }
                                    </span>
                                    <span class="text-muted small">(@r.Rating/5)</span>
                                </td>

                                <td>@r.ReviewDate.ToString("d")</td>

                                <td style="min-width: 260px">
                                    @r.Comments
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</section>
