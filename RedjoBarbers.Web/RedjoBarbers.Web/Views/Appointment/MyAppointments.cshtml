@using RedjoBarbers.Web.Data.Models
@model MyAppointmentsPageViewModel

@{
    ViewData["Title"] = "Моят профил";
}

<h2>Моите часове</h2>

@if (!Model.Appointments.Any())
{
    <div class="alert alert-info">Няма намерени записани часове.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Услуга</th>
                <th>Бръснар</th>
                <th>Статус</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Appointment a in Model.Appointments)
            {
                <tr>
                    <td>@a.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@a.BarberService?.Name</td>
                    <td>@a.Barber?.Name</td>
                    <td>@a.Status</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-info">Детайли</a>
                        <a asp-action="Update" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Редактиране</a>
                        <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-sm btn-danger">Изтриване</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h2>Моите отзиви</h2>

@if (!Model.Reviews.Any())
{
    <div class="alert alert-info">Няма отзиви.</div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Услуга</th>
                <th>Оценка</th>
                <th>Коментар</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Review r in Model.Reviews)
            {
                <tr>
                    <td>@r.ReviewDate.ToString("dd.MM.yyyy")</td>
                    <td>@r.BarberService?.Name</td>
                    <td>@r.Rating</td>
                    <td>@r.Comments</td>

                    <td class="text-end">
                        <a asp-controller="Review"
                           asp-action="Update"
                           asp-route-id="@r.Id"
                           class="btn btn-outline-secondary btn-sm me-2">
                            Редактиране
                        </a>

                        <form asp-controller="Review"
                              asp-action="Delete"
                              asp-route-id="@r.Id"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Сигурни ли сте, че искате да изтриете вашия отзив?');">
                                Изтриване
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
